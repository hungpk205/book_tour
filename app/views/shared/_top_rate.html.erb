<div class="col-lg-3 col-md-6 top_col">
  <div class="top_item">
    <%= link_to tour_url(top_rate) do %>
      <div class="top_item_image">
        <% if top_rate.picture? %>
          <%= image_tag top_rate.picture.url, size: Settings.size_img.home %>
        <% else %>
          <%= image_tag "/assets/default-image.jpg", size: Settings.size_img.home %>
        <% end %>
      </div>
      <div class="top_item_content">
      	<div><%= top_rate.score %></div>
        <div class="top_item_price">
          <% if params[:locale] == Settings.locale_en %>
            <p><%= t(".price") %>: <%= number_to_currency top_rate.price %></p>
          <% else %>
            <p><%= t(".price") %>: <%= number_to_currency change_en_to_vn(top_rate.price) %></p>
          <% end %>
        </div>
      <div class="top_item_text"><%= top_rate.place %></div>
      </div>
    <% end %>
  </div>
</div>
