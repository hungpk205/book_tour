<% provide(:title, t(".title")) %>
<div class="news">
  <div class="container">
    <div class="row">
      <!-- News Posts -->
      <div class="col-lg-9">
        <div class="news_posts">
          <!-- News Post -->
          <div class = "form_padding">
            <div class="news_post">
              <div class="post_title"><%= link_to @tour.name ,tour_url %></div>
                <div class="post_meta">
                  <ul>
                    <li><%= l @tour.created_at, format: Settings.format_time %></li>
                  </ul>
                </div>
                <div class="post_text">
                  <p><%= t ".place" %>: <%= @tour.place %></p>
                </div>
                <div class="post_image">
                  <% if @tour.picture? %>
                    <%= image_tag @tour.picture.url, size: "850x400" %>
                  <% else %>
                    <%= image_tag "/assets/default-image.jpg", size: "850x400" %>
                  <% end %>
                  <%= link_to t(".book"), new_booking_path(tour_id: @tour.id), class: "post_image_box text-center" %>
                </div>
                <div class="post_text">
                  <p><%= t ".description" %>: <%= @tour.description %></p>
                </div>
                <div class="post_text">
                  <p><%= t ".detail" %>: <%= @tour.detail %></p>
                </div>
                <div class="post_text">
                  <% if params[:locale] == Settings.locale_en %>
                    <p><%= t ".price" %>: <%= number_to_currency @tour.price %></p>
                  <% else %>
                    <p><%= t ".price" %>: <%= number_to_currency change_en_to_vn(@tour.price) %></p>
                  <% end %>
                </div>
                <div class="post_text">
                  <p><%= t ".start_time" %>: <%= l @tour.start_time, format: Settings.format_time %></p>
                </div>
                <div class="post_text">
                  <p><%= t ".finish_time" %>: <%= l @tour.finish_time, format: Settings.format_time %></p>
                </div>

                <div class = "form_padding">
                  <div id = "count-comment"><%= t ".comment" %></div>
                  <div>
                    <% load_comment_of_tour(@tour) %>
                    <%= render "shared/comments" %>
                    <%= will_paginate @comments %>
                  </div>
                  <div class = "form-comment">
                    <%= render "shared/form_comment" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!--/News Post -->
        </div>
      </div>
    </div>
  </div>
</div>
