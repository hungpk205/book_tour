<div class="news_post">
  <div class="post_title"><%= link_to tour.name ,tour_url(tour) %></div>
  <div class="post_meta">
    <ul>
      <li><%= l tour.created_at, format: Settings.format_time %></li>
    </ul>
  </div>
  <div class="post_image">
    <img src="/assets/news_1.jpg" alt="https://unsplash.com/@simonmigaj">
    <a href="#"><div class="post_image_box text-center"></div></a>
  </div>
  <div class="post_text">
    <p><%= tour.description %></p>
  </div>
</div>
